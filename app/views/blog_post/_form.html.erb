<%= form_with model:blog_post do |form| %>
  <% if form.object.errors.any? %>
      <% form.object.errors.full_messages.each do |error| %>
        <div><%= error %></div>
      <% end %>
  <% end %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>
  <div>
    <%= form.button button_label, class: "bg-white hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 border border-gray-400 rounded shadow"  %>
  </div>
<% end %>
